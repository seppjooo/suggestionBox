<p id="notice"><%= notice %></p>

<h1>Listing Votes</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.topic_id %></td>
        <td><%= button_to 'Show', vote, :method => "get" %></td>
        <td><%= button_to 'Edit', edit_vote_path(vote), :method => "get" %></td>
        <td><%= button_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Vote', new_vote_path, :method => "get" %>
