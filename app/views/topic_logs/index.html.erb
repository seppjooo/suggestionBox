<p id="notice"><%= notice %></p>

<h1>Listing Topic Logs</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Topic</th>
      <th>Posted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
  <tr>
    <td><%= topic.title %></td>
    <td><%= topic.description %></td>
    <td><%= pluralize(topic.votes.count, "vote") %></td>
    <td><%= button_to '+1', upvote_topic_path(topic), method: :post %></td>
    <td><%= button_to 'Show', topic, :method => "get" %></td>
    <td><%= button_to 'Edit', edit_topic_path(topic), :method => "get" %></td>
    <td><%= button_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
    <% end %>
  </tbody>
</table>

<br>

<%=button_to 'New Topic log', new_topic_log_path, :method => "get" %>
